@model tallerIIpractico3.ViewModel.CreatePedidoViewModel
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

@if (Model.UserLog != null)
{
    if(Model.UserLog.Rol == "admin")
    {
        @await Html.PartialAsync("MenuAdmin", Model.UserLog);
    }
    else
    {
        @await Html.PartialAsync("MenuUser", Model.UserLog);
    }
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-controller="Pedido" asp-action="CreatePedidoFromCliente">
                <fieldset>
                <legend>Pedido para Cliente: </legend>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
                <input asp-for="Cliente.Id" class="form-control" hidden/>

                <div class="form-group">
                    <label asp-for="PedidoObs" class="control-label">Observaciones</label>
                    <input asp-for="PedidoObs" class="form-control" />
                    <span asp-validation-for="PedidoObs" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Cliente.Nombre" class="control-label">Nombre</label>
                    <input asp-for="Cliente.Nombre" class="form-control" readonly/>
                    <span asp-validation-for="Cliente.Nombre" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Cliente.Direccion" class="control-label">Direccion</label>
                    <input asp-for="Cliente.Direccion" class="form-control" readonly/>
                    <span asp-validation-for="Cliente.Direccion" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Cliente.Telefono" class="control-label">Telefono</label>
                    <input asp-for="Cliente.Telefono" class="form-control" readonly/>
                    <span asp-validation-for="Cliente.Telefono" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="CadeteId" class="control-label">Cadete</label>
                    <select asp-for="CadeteId" asp-items="@(new SelectList(Model.Cadetes, "Id", "Nombre"))">
                        <option value="" selected>----</option>
                    </select>
                </div>
                </fieldset>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
  
    </div>

    <div>
        <a asp-controller="Cliente" asp-action="IndexCliente">Lista de Clientes</a>
    </div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
}else
{
    <script type="text/JavaScript">
      setTimeout("location.href = 'https://localhost:44374/';",2000);
    </script>

    <p>No tiene permiso para estar en esta pagina</p>
}