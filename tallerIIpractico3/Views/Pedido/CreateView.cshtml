@model tallerIIpractico3.ViewModel.CreatePedidoNewCliente_ViewModel 

@{
    ViewData["Title"] = "CreateView";
}

<h4>Pedido - Nuevo Cliente</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-controller="Pedido" asp-action="CreatePedido">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group">
                <label asp-for="PedidoObs" class="control-label">Observaciones</label>
                <input asp-for="PedidoObs" class="form-control" />
                <span asp-validation-for="PedidoObs" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cliente.Nombre" class="control-label">Nombre</label>
                <input asp-for="Cliente.Nombre" class="form-control" />
                <span asp-validation-for="Cliente.Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cliente.Direccion" class="control-label">Direccion</label>
                <input asp-for="Cliente.Direccion" class="form-control" />
                <span asp-validation-for="Cliente.Direccion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cliente.Telefono" class="control-label">Telefono</label>
                <input asp-for="Cliente.Telefono" class="form-control" />
                <span asp-validation-for="Cliente.Telefono" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="CadeteId" class="control-label">Cadete</label>
                <select asp-for="CadeteId" asp-items="@(new SelectList(Model.Cadetes, "Id", "Nombre"))">
                </select>

            </div>
         
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
