@model tallerIIpractico3.ViewModel.ClienteIndexViewModel

@{
    ViewData["Title"] = "IndexCliente";
}


@if (Model.UserLog != null)
{
    if(Model.UserLog.Rol == "admin")
    {
        @await Html.PartialAsync("MenuAdmin", Model.UserLog);
    }
    else
    {
        @await Html.PartialAsync("MenuUser", Model.UserLog);
    }

    <hr/>
    <h4>Clientes</h4>
    <div class="row">
            <div class="btn-group, col-md-2" role="group" aria-label="Basic outlined example">
                <a button type="button" class="btn btn-primary" asp-action="IndexTodosLosClientes">Todos los Clientes</a>
            </div>
            <div class="btn-group, col-md-8" role="group" aria-label="Basic outlined example">

                <form asp-controller="Cliente" asp-action="IndexBusquedaFiltrada" method="post">
                    <label for="busqueda">Buscar por: </label>
                    <input type="text" name="busqueda" id="busqueda">

                    <button type="submit" class="btn btn-primary">Enviar</button>
                </form>

            </div>

            <div class="btn-group, col-md-2" role="group" aria-label="Basic outlined example">
                  <a button type="button" class="btn btn-primary" asp-action="IndexCliente">Limpiar</a>  
            </div>

    </div>
    <table class="table" style="text-align:center;">
        <thead>
            <tr>
                <th>
                    Id
                </th>
                <th>
                    Nombre
                </th>
                <th>
                    Dirección
                </th>
                <th>
                    Teléfono
                </th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
    @foreach (var item in Model.Clientes) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Direccion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Telefono)
                </td>
                <td style="border:solid gray 1px">
                    @Html.ActionLink("Tomar Pedido", "CreateViewFromCliente", "Pedido", item)
                </td>
                <td>
                    @Html.ActionLink("Editar", "EditView", item) |
                    @Html.ActionLink("Eliminar", "DeleteView", item)
                </td> 
            </tr>
    }
        </tbody>
    </table>
}else
{
    <script type="text/JavaScript">
      setTimeout("location.href = 'https://localhost:44374/';",2000);
    </script>

    <p>No tiene permiso para estar en esta pagina</p>
}