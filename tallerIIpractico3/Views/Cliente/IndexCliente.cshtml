@model IEnumerable<tallerIIpractico3.entities.Cliente>

@{
    ViewData["Title"] = "IndexCliente";
}

<hr />

<table class="table" style="text-align:center;">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Direccion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telefono)
            </th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Direccion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telefono)
            </td>
            <td style="border:solid gray 1px">
                @Html.ActionLink("Tomar Pedido", "CreateViewFromCliente", "Pedido", item)
            </td>
            <td>
                @Html.ActionLink("Modificar", "EditView", item) |
                @Html.ActionLink("Eliminar", "Delete", item)
            </td> 
        </tr>
}
    </tbody>
</table>
