@model tallerIIpractico3.entities.Cadete

<div class="container">
    <div class="row">
        <div class="col-6">
            <form asp-controller="Cadete" asp-action="SaveCadete" method="post">
                <fieldset>
                    <legend class="">Registrar un cadete</legend>
                    <div class="mb-3">
                        <label asp-for="Nombre" class="form-label"></label>
                        <input type="text"  class="form-control" asp-for="Nombre" placeholder="López, David" required>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Direccion" class="form-label"></label>
                        <input type="text" id="dir" class="form-control" asp-for="Direccion" placeholder="San Lorenzo 789" required>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Telefono" class="form-label"></label>
                        <input type="text" id="tel" class="form-control" asp-for="Telefono" placeholder="3815456876" required>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Vehiculo" class="form-label"></label>
                        <select id="vehiculo" asp-for="Vehiculo">
                            <option value="">Seleccione</option>
                            <option value="@tallerIIpractico3.entities.TipoVehiculo.Bicicleta">Bicicleta</option>
                            <option value="@tallerIIpractico3.entities.TipoVehiculo.Auto">Auto</option>
                            <option value="@tallerIIpractico3.entities.TipoVehiculo.Moto">Moto</option>
                        </select>
                    </div>
                    <button type="submit" class="btn btn-primary">Enviar</button>
                </fieldset>
            </form>
        </div>
    </div>

</div>

